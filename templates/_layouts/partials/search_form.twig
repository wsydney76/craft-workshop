{% set searchEntry = craft.entries.section('search').one %}

{% if searchEntry %}

    <form class="form-inline my-2 my-lg-0" method="get" action="{{ searchEntry.url }}">
        <div class="input-group">
            <input class="form-control" name="q" type="search"
                   value="{{ searchFor is defined ? searchFor : '' }}"
                   aria-label="{{ searchEntry.title }}">
            <div class="input-group-append">
                <button class="btn btn-primary my-2 my-sm-0 " type="submit">{{ "Search"|t }}</button>
            </div>
        </div>

    </form>

{% endif %}

