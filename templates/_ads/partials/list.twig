{% set paginatorHtml %}
    {% if paginator.totalPages >1 %}
        <div class="container my-3">
            <div class="row">
                <div class="col-4">
                    {% if paginator.currentPage != 1 %}
                        <a class="btn btn-outline-primary"
                           href="/{{ craft.app.request.fullUri }}?page={{ paginator.currentPage-1 }}">&larr; {{ 'Previous Page'|t }}</a>
                    {% endif %}
                </div>

                <div class="col-4 text-center pt-1">{{ 'Page'|t }} {{ paginator.currentPage }}
                    /{{ paginator.totalPages }}</div>

                <div class="col-4 text-right">
                    {% if paginator.currentPage < paginator.totalPages %}
                        <a class="btn btn-outline-primary"
                           href="/{{ craft.app.request.fullUri }}?page={{ paginator.currentPage+1 }}">{{ 'Next Page'|t }}
                            &rarr;</a>
                    {% endif %}
                </div>

            </div>
        </div>
    {% endif %}
{% endset %}

{{ paginatorHtml }}

{% for ad in ads %}
    <div class="my-4 bg-white p-4 rounded-lg">
        {% if type == 'all' %}
            <div>{{ ad.type|t('ads') }}</div>
        {% endif %}

        <div class="font-weight-bold mb-3">
            <a href="{{ ad.url }}">{{ ad.title }}</a>
        </div>

        <div class="mb-3">
            {{ ad.dateCreatedLocal|datetime('short') }}
            <a href="mailto:{{ ad.email }}">{{ 'Email'|t }}</a>
        </div>

        <td>
            {{ ad.text|nl2br }}
        </td>
    </div>
{% endfor %}

{{ paginatorHtml }}
