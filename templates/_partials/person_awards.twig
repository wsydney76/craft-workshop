{% set entries = query.all %}

{% if entries %}
    {% embed '_layouts/embeds/bordered_box.twig' %}
        {% block content %}
            {% from '_layouts/embeds/bordered_box.twig' import displayItem %}
            {% for entry in entries %}
                {% set film = entry.film|one %}
                {% if film %}
                    {{ displayItem("#{entry.title} #{'for'|t} #{film.link}") }}
                {% else %}
                    {{ displayItem(entry.title) }}
                {% endif %}
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endif %}
