<div class="pt-3">
    <div class="p-3 my-5 bg-light border entry-meta position-relative">
        {% set user = entry.author %}
        {% set photo = user.photo %}
        {% if photo %}
            <div class="img-overlap-top-rounded">
                <img src="{{ photo.url({width:100,height:100}) }}" alt="{{ user.fullName }}">
            </div>
        {% endif %}

        <div class="text-center pt-5">
            {{ user.fullName }}, {{ entry.postDate|date }}
            {% set bio = currentSite.handle == 'en' ? user.bio : user.bioDe %}
            {% if bio %}
                <div class="mt-3">
                    {{ bio }}
                </div>
            {% endif %}
        </div>
    </div>
</div>
